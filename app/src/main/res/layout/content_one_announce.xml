<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="6dp">


    <me.next.tagview.TagCloudView
        android:id="@+id/project_tag_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="-14dp"
        app:tcvItemBorderHorizontal="8dp"
        app:tcvItemBorderVertical="6dp"
        app:tcvBorder="8dp"
        app:tcvSingleLine="true"
        app:background="@color/primary"
        app:tcvTextColor="#ffffff"
        app:tcvCanTagClick="true">

    </me.next.tagview.TagCloudView>

    <TextView
        android:id="@+id/project_title_one"
        android:layout_below="@id/project_tag_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:textSize="23sp"
        tools:text="项目一" />
    <LinearLayout
        android:id="@+id/ll_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/project_title_one"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/project_people_count_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="人数：" />

        <TextView
            android:id="@+id/project_people_count_one"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="6" />
    </LinearLayout>

    <TextView
        android:id="@+id/project_describe_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/ll_count"
        tools:text="关于大数据的研究" />

    <Button
        android:id="@+id/join"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请加入"/>

</RelativeLayout>